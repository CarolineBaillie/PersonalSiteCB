---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header title={SITE_TITLE} />
		<main>
			<h1 style="text-align:center;">My Projects!</h1><br>
            <h2 class="projHead">Javascript Projects:</h2>
            <div class="grid">
                {jsProjects.map((data) => <Project title={data.title} desc={data.desc} link={data.link} image={data.image}></Project>)}
            </div><br>
            <h2 class="projHead">Hackathon Projects:</h2>
            <div class="grid">
                {hackProjects.map((data) => <Project title={data.title} desc={data.desc} link={data.link} image={data.image}></Project>)}
            </div><br>
            <h2 class="projHead">Engineering Projects:</h2>
            <div class="grid">
                {engProjects.map((data) => <Project title={data.title} desc={data.desc} link={data.link} image={data.image}></Project>)}
            </div><br>
            <h2 class="projHead">Writing/Blogs:</h2>
            <div class="grid">
                {blogProjects.map((data) => <Project title={data.title} desc={data.desc} link={data.link} image={data.image}></Project>)}
            </div>
		</main>
		<Footer />
	</body>
</html>
